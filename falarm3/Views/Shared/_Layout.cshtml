<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Take a Break</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body >
        <div class="container header row">
            <div class="navbar navbar-inverse col-md-5 navbar-hide">
                    <ul class="nav  navbar-nav navbar-nav-left">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Partners", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
            </div>
        <div class="col-md-2 icon"><img src="~/Content/Images/CoStar.jpg" alt="Img" /></div>
            <div class="navbar navbar-inverse col-md-5">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class ="extras">@Html.ActionLink("About", "About", "Home")</li>
                        <li class="extras">@Html.ActionLink("Partners", "About", "Home")</li>
                        <li class="extras">@Html.ActionLink("Contact", "Contact", "Home")</li>
                        
                        <li>@Html.ActionLink("Sign up", "About", "Home")</li>
                        <li>@Html.ActionLink("Login", "About", "Home")</li>
                        <li>@Html.ActionLink("Coverage", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
